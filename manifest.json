{
  "manifest_version": 3,
  "name": "Chrome Extension",
  "version": "0.1.0",
  "description": "A Chrome extension built with Vite and React",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/*",
        "https://*.bing.com/*",
        "https://*.yahoo.com/*",
        "https://*.baidu.com/*",
        "https://*.duckduckgo.com/*"
      ],
      "js": ["content.js"],
      "css": []
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.google.com/*",
    "https://*.bing.com/*",
    "https://*.yahoo.com/*",
    "https://*.baidu.com/*",
    "https://*.duckduckgo.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}